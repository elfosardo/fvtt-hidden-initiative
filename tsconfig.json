{
    "compilerOptions": {
        "outDir": "./module",

        "esModuleInterop": true,
        "lib": ["dom", "es2017"],
        "importHelpers": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "resolveJsonModule": true,

        "skipLibCheck": true,

        "strict": true,
        "allowUnreachableCode": true,
        "noUnusedLocals": true,
        "noUnusedParameters": false,

        "target": "es2017",
        "types": ["foundry-pc-types"]
    },
    "include": ["./src/**/*"]
}
